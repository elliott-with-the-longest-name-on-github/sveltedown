{
	"name": "@sejohnson/hardened-svelte-markdown",
	"version": "0.0.1",
	"scripts": {
		"build": "npm run prepack",
		"prepack": "svelte-package --input=src && publint",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"test": "pnpm test:unit --run"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"src",
		"!src/**/*.test.*",
		"!src/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "catalog:"
	},
	"devDependencies": {
		"@sejohnson/svelte-markdown": "workspace:*",
		"@sveltejs/package": "catalog:",
		"@sveltejs/vite-plugin-svelte": "catalog:",
		"@types/hast": "catalog:",
		"@types/node": "catalog:",
		"@vitest/browser": "catalog:",
		"config": "workspace:*",
		"playwright": "catalog:",
		"publint": "catalog:",
		"svelte": "catalog:",
		"svelte-check": "catalog:",
		"typescript": "catalog:",
		"vite": "catalog:",
		"vitest": "catalog:",
		"vitest-browser-svelte": "catalog:"
	},
	"keywords": [
		"svelte"
	],
	"dependencies": {
		"unist-util-visit": "catalog:"
	}
}
