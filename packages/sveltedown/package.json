{
	"name": "sveltedown",
	"version": "0.0.1",
	"scripts": {
		"build": "npm run prepack",
		"build:watch": "svelte-package --input=src --watch",
		"prepack": "svelte-package --input=src && publint",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"test": "pnpm test:unit --run"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"src",
		"!src/**/*.test.*",
		"!src/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./experimental-async": {
			"types": "./dist/experimental-async.d.ts",
			"svelte": "./dist/experimental-async.js"
		}
	},
	"typesVersions": {
		">4.0": {
			"./experimental-async": [
				"./dist/experimental-async.d.ts"
			]
		}
	},
	"peerDependencies": {
		"svelte": "catalog:"
	},
	"devDependencies": {
		"@sveltejs/package": "catalog:",
		"@sveltejs/vite-plugin-svelte": "catalog:",
		"@types/hast": "catalog:",
		"@types/mdast": "catalog:",
		"@types/node": "catalog:",
		"@vitest/browser": "catalog:",
		"config": "workspace:*",
		"playwright": "catalog:",
		"publint": "catalog:",
		"rehype-raw": "catalog:",
		"remark-gfm": "catalog:",
		"remark-toc": "catalog:",
		"svelte": "catalog:",
		"svelte-check": "catalog:",
		"typescript": "catalog:",
		"vite": "catalog:",
		"vitest": "catalog:",
		"vitest-browser-svelte": "catalog:"
	},
	"keywords": [
		"svelte"
	],
	"dependencies": {
		"hast-to-svelte": "workspace:*",
		"property-information": "catalog:",
		"remark-parse": "catalog:",
		"remark-rehype": "catalog:",
		"style-to-object": "catalog:",
		"unified": "catalog:",
		"vfile": "catalog:"
	}
}
