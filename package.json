{
	"name": "root",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"build": "pnpm -r build",
		"dev": "concurrently \"pnpm --filter svehast build:watch\" \"pnpm --filter sveltedown build:watch\" \"pnpm --filter docs dev\"",
		"check": "pnpm -r check",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test": "pnpm -r test",
		"version-packages": "changeset version && pnpm i --no-frozen-lockfile && git add .",
		"release": "pnpm -r build && changeset publish"
	},
	"keywords": [
		"svelte"
	],
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	},
	"packageManager": "pnpm@10.17.1+sha512.17c560fca4867ae9473a3899ad84a88334914f379be46d455cbf92e5cf4b39d34985d452d2583baf19967fa76cb5c17bc9e245529d0b98745721aa7200ecaf7a",
	"devDependencies": {
		"@changesets/cli": "catalog:",
		"@eslint/compat": "catalog:",
		"@eslint/js": "catalog:",
		"@sveltejs/adapter-vercel": "catalog:",
		"@sveltejs/vite-plugin-svelte": "catalog:",
		"concurrently": "catalog:",
		"eslint": "catalog:",
		"eslint-config-prettier": "catalog:",
		"eslint-plugin-svelte": "catalog:",
		"globals": "catalog:",
		"playwright": "catalog:",
		"prettier": "catalog:",
		"prettier-plugin-svelte": "catalog:",
		"typescript-eslint": "catalog:"
	}
}
