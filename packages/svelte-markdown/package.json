{
	"name": "@sejohnson/svelte-markdown",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "pnpm test:unit --run"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "catalog:"
	},
	"devDependencies": {
		"@sveltejs/adapter-vercel": "catalog:",
		"@sveltejs/kit": "catalog:",
		"@sveltejs/package": "catalog:",
		"@sveltejs/vite-plugin-svelte": "catalog:",
		"@types/hast": "catalog:",
		"@types/node": "catalog:",
		"@vitest/browser": "catalog:",
		"playwright": "catalog:",
		"publint": "catalog:",
		"rehype-raw": "catalog:",
		"remark-gfm": "catalog:",
		"svelte": "catalog:",
		"svelte-check": "catalog:",
		"typescript": "catalog:",
		"vite": "catalog:",
		"vitest": "catalog:",
		"vitest-browser-svelte": "catalog:"
	},
	"keywords": [
		"svelte"
	],
	"dependencies": {
		"@types/mdast": "catalog:",
		"esm-env": "catalog:",
		"html-url-attributes": "catalog:",
		"property-information": "catalog:",
		"remark-parse": "catalog:",
		"remark-rehype": "catalog:",
		"style-to-object": "catalog:",
		"unified": "catalog:",
		"unist-util-visit": "catalog:",
		"vfile": "catalog:"
	}
}
